{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts . && npm run lint-glean",
    "build": "npm run glean && tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "glean": "npm run glean-metrics && npm run glean-docs",
    "glean-metrics": "glean translate ./metrics.yaml ./pings.yaml -f typescript -o public/generated",
    "glean-docs": "glean translate ./metrics.yaml ./pings.yaml -f markdown -o docs",
    "lint-glean": "glean glinter ./metrics.yaml ./pings.yaml"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1"
  },
  "devDependencies": {
    "@mozilla/glean": "^0.18.1",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "typescript": "^3.8.0",
    "uuid": "^8.3.2"
  },
  "private": true
}